<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainactivity"
            type="com.xiaodao.lora.ui.activity.MainActivity">
        </variable>
    </data>

    <LinearLayout
        android:id="@+id/ll_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_title"
            layout="@layout/custom_title_bar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/H37"
            android:layout_marginTop="@dimen/H7"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_old_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/W11"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入原密码"
                android:maxLines="1"
                android:textColor="@color/dark"
                android:textColorHint="@color/modify_name_text_hint"
                android:textSize="@dimen/H12"/>

            <FrameLayout
                android:id="@+id/fl_old_password_visible"
                android:layout_width="wrap_content"
                android:background="@drawable/base_button_click_selector"
                android:layout_height="match_parent">

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/rb_old_password_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/W11"
                    android:layout_marginRight="@dimen/W10"
                    android:button="@drawable/password_visible_radio_button"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_old_delete"
                android:background="@drawable/base_button_click_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/W11"
                    android:layout_marginRight="@dimen/W11"
                    android:src="@mipmap/shanchu"/>
            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@color/press"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/H37"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_new_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/W11"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/dark"
                android:textColorHint="@color/modify_name_text_hint"
                android:textSize="@dimen/H12"/>

            <FrameLayout
                android:id="@+id/fl_new_password_visible"
                android:layout_width="wrap_content"
                android:background="@drawable/base_button_click_selector"
                android:layout_height="match_parent">

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/rb_new_password_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/W11"
                    android:layout_marginRight="@dimen/W10"
                    android:button="@drawable/password_visible_radio_button"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_new_delete"
                android:background="@drawable/base_button_click_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/W11"
                    android:layout_marginRight="@dimen/W11"
                    android:src="@mipmap/shanchu"/>
            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@color/press"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/H37"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_new_password_again"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/W11"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/dark"
                android:textColorHint="@color/modify_name_text_hint"
                android:textSize="@dimen/H12"/>

            <FrameLayout
                android:id="@+id/fl_again_password_visible"
                android:layout_width="wrap_content"
                android:background="@drawable/base_button_click_selector"
                android:layout_height="match_parent">

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/rb_again_password_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/W11"
                    android:layout_marginRight="@dimen/W10"
                    android:button="@drawable/password_visible_radio_button"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_again_delete"
                android:background="@drawable/base_button_click_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/W11"
                    android:layout_marginRight="@dimen/W11"
                    android:src="@mipmap/shanchu"/>
            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@color/press"/>

    </LinearLayout>

</layout>
