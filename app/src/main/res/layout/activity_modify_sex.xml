<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainactivity"
            type="com.xiaodao.lora.ui.activity.MainActivity">
        </variable>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_title"
            layout="@layout/custom_title_bar"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@color/press"/>

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiobutton_woman"
                android:text="女"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/W18"
                android:layout_marginLeft="@dimen/W11"
                android:layout_width="match_parent"
                android:textColor="@color/woman_radio_buton_text_selector"
                android:button="@drawable/woman_radio_button"
                android:layout_height="@dimen/H37"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/press"/>

            <RadioButton
                android:id="@+id/radiobutton_man"
                android:text="男"
                android:gravity="center_vertical"
                android:textColor="@color/man_radio_buton_text_selector"
                android:paddingLeft="@dimen/W18"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/W11"
                android:button="@drawable/man_radio_button"
                android:layout_height="@dimen/H37"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/press"/>
        </RadioGroup>

    </LinearLayout>

</layout>
