<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sign_in_dialog_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/W231"
        android:layout_height="@dimen/H36"
        android:src="@drawable/sign_in_dialog_head"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="@dimen/W231"
        android:layout_height="@dimen/H103"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/H5"
        android:paddingLeft="@dimen/W18"
        android:paddingRight="@dimen/W18"
        android:text=""
        android:ellipsize="end"
        android:textColor="@color/dark"
        android:lines="2"
        android:textSize="@dimen/H15"/>
</LinearLayout>