<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainactivity"
            type="com.xiaodao.lora.ui.activity.MainActivity">
        </variable>
    </data>

    <LinearLayout
        android:id="@+id/ll_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_title"
            layout="@layout/custom_title_bar"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiperefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_headview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H50"
                    android:background="@drawable/base_button_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_information_tv_headview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="头像"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/H12"/>

                    <ImageView
                        android:id="@+id/iv_headview"
                        android:layout_width="@dimen/W38"
                        android:layout_height="@dimen/H32"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W14"
                        android:layout_marginRight="@dimen/W11"
                        android:src="@mipmap/jinru"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:src="@color/press"/>

                <LinearLayout
                    android:id="@+id/ll_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H37"
                    android:background="@drawable/base_button_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:maxLines="1"
                        android:text="用户名"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/H12"/>

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:layout_marginRight="@dimen/W11"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="gjfkofk123"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/H12"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:src="@color/press"/>

                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H37"
                    android:background="@drawable/base_button_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:maxLines="1"
                        android:text="姓名"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/H12"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="奥黛丽"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/H12"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W14"
                        android:layout_marginRight="@dimen/W11"
                        android:src="@mipmap/jinru"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:src="@color/press"/>

                <LinearLayout
                    android:id="@+id/ll_sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H37"
                    android:background="@drawable/base_button_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:maxLines="1"
                        android:text="性别"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/H12"/>

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="女"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/H12"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W14"
                        android:layout_marginRight="@dimen/W11"
                        android:src="@mipmap/jinru"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:src="@color/press"/>

                <LinearLayout
                    android:id="@+id/ll_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H37"
                    android:background="@drawable/base_button_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_information_tv_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:maxLines="1"
                        android:text="手机号"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/H12"/>

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="12365478922"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/H12"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W14"
                        android:layout_marginRight="@dimen/W11"
                        android:src="@mipmap/jinru"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:src="@color/press"/>

                <LinearLayout
                    android:id="@+id/ll_adress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H37"
                    android:background="@drawable/base_button_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:maxLines="1"
                        android:text="地址"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/H12"/>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W11"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="right"
                        android:text="广东省深圳市东方科技大厦"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/H12"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/W14"
                        android:layout_marginRight="@dimen/W11"
                        android:src="@mipmap/jinru"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

</layout>
