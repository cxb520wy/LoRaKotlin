<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainactivity"
            type="com.xiaodao.lora.ui.activity.MainActivity">
        </variable>
    </data>

    <LinearLayout
        android:id="@+id/ll_root"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background">

        <include
            android:id="@+id/layout_title"
            layout="@layout/custom_title_bar"/>


        <LinearLayout
            android:id="@+id/ll_modify_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H36"
            android:background="@drawable/base_button_click_selector"
            android:layout_marginTop="@dimen/H20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/W14"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="声音提醒"
                android:textColor="@color/dark"
                android:textSize="@dimen/H12" />

            <Switch
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/W14"
                android:layout_marginRight="@dimen/W14"
                android:src="@mipmap/jinru" />

        </LinearLayout>

        <ImageView
            android:layout_marginLeft="@dimen/W11"
            android:layout_marginRight="@dimen/W11"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@color/press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/H36"
            android:background="@drawable/base_button_click_selector"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/W14"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="震动提醒"
                android:textColor="@color/dark"
                android:textSize="@dimen/H12" />

            <Switch
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/W14"
                android:layout_marginRight="@dimen/W14"
                android:src="@mipmap/jinru" />

        </LinearLayout>

    </LinearLayout>

</layout>
